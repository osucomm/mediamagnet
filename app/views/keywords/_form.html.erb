<%= simple_form_for @keyword, html: { class: 'form-horizontal' },
  wrapper: :horizontal_form do |f| %>

  <%= f.error_notification %>

  <%= f.input :display_name %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :category, :collection => @categories %>

  <%= f.button :submit %>
  <%- unless @keyword.new_record? %>
    <%= link_to 'Delete Keyword', keyword_path(@keyword), class: 'btn btn-danger action-button',
      method: :delete, data: { confirm: 'Are you sure?' } %>
  <%- end %>

<%- end %>