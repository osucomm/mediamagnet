<%= simple_form_for [@entity, @channel], as: :channel, html: { class: 'form-horizontal' },
  wrapper: :horizontal_form,
  wrapper_mappings: {
    boolean: :horizontal_boolean
  } do |f| %>

  <%= f.error_notification %>

  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :service_identifier, label: @channel.service_id_name %>
  <%- if @channel.instance_of? WebChannel %>
    <%= f.input :url, label: 'Home page' %>
  <%- end %>
  <%= f.input :primary %>

  <%= field_set_tag 'Contact' do %>
    <%= f.simple_fields_for :contact do |c| %>
      <%= c.input :name %>
      <%= c.input :organization %>
      <%= c.input :url, label: 'URL' %>
      <%= c.input :phone %>
      <%= c.input :email %>
    <% end %>
  <% end %>

  <%= f.button :submit %>

<%- end %>