<%= simple_form_for [@entity, @channel], as: :channel, html: { class: 'form-horizontal' },
  wrapper: :horizontal_form,
  wrapper_mappings: {
    boolean: :horizontal_boolean
  } do |f| %>

  <%= f.error_notification %>

  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :service_identifier, label: @channel.service_id_name %>
  <%- if @channel.instance_of? WebChannel %>
    <%= f.input :url, label: 'Home page' %>
  <%- end %>
  <%= f.input :primary %>
  <%= render partial: 'keywords/tag_field', locals: {f: f} %>

  <%= field_set_tag 'Contact' do %>
    <%= render partial: 'contacts/form', locals: {f: f} %>
  <% end %>

  <%= f.button :submit %>

<%- end %>

<%= render 'mappings/mappings', mappable: @channel %>
