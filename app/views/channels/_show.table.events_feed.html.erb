<table class="table table-striped table-content footable">
  <thead>
    <tr>
      <th data-toggle="true">Item</th>
      <th>Start</th>
      <th data-hide="phone">End</th>
      <th data-hide="phone">Location</th>
    </tr>
  </thead>
  <tbody>
    <%- @channel.items.take(4).recent.each do |item| %>
    <tr>
      <td>
        <%= link_to item, item %>
      </td>
      <td>
          <%- item.events.each do |event| %>
            <%= time_or_dash(event.start_date, :pretty_long) %><br>
          <%- end %>
      </td>
      <td>
          <%- item.events.each do |event| %>
            <%= time_or_dash(event.end_date, :pretty_long) %><br>
          <%- end %>
      </td>
      <td>
          <%- item.events.each do |event| %>
            <%= event.location_name %><br>
          <%- end %>
      </td>

    </tr>
    <%- end %>
  </tbody>
</table>
