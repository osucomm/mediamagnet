<h1>Channels</h1>

<table class="table">
  <tr>
    <th>Name</th>
    <th>Type</th>
    <th>Entity</th>
    <th>Last Updated</th>
    <th>Actions</th>
  </tr>

  <%- @channels.each do |channel| %>
    <tr>
      <td><%= link_to channel.name, channel %></td>
      <td><%= channel.type_name %></td>
      <td><%= link_to channel.entity.name, channel.entity %></td>
      <td><%= time_or_dash(channel.last_polled_at) %></td>
      <td><%= channel_action_links channel %></td>
    </tr>
  <%- end %>
</table>

<%= paginate @channels %>
