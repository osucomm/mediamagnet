	<table class="table table-striped table-content">
	  <tbody>
		<tr>
		<th class="col-md-2">Date</th>
		<th class="">Item</th>
		<th class="col-md-2"><!--Visuals--></th>
	  </tr>
		  <%- @channel.items.recent.take(4).each do |item| %>
			<tr>
			  <td>
				<p class="nobr"><%= time_or_dash(item.published_at, :med_omit_year) %></p>
			  </td>
			  <td>
					<%= link_to excerpt_for(item), item %>
					<hr/>
					<p class="small text-rightx">
					</p>
			  </td>
			  <td>
				<%- if item.assets.present? %>
					<%- item.assets.each do |asset| %>
						<%= render_asset(asset,'img-responsive table-twitter-image' ) %>
					<%- end %>
				<%- end %>
			  </td>
			</tr>
		<%- end %>
		</tbody>
	</table>	
