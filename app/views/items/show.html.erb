<h1><%= title excerpt_for(@item) %></h1>
<p class="lead">URL: <%= link_to @item.link.to_s, @item.link.to_s %></p>

<div class="col-sm-7">
  <%- if @item.description.present? %>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h2 class="panel-title">Description</h2>
    </div>
    <div class="panel-body">
      <p><%= @item.description.html_safe %></p>
    </div>
  </div>
  <%- end %>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h2 class="panel-title">Content</h2>
    </div>
    <div class="panel-body">
      <p><%= content(@item) %></p>
    </div>
  </div>
  <%- if @item.assets.present? %>
   <div class="panel panel-default">
    <div class="panel-heading">
      <h2 class="panel-title">Assets <%= help_icon_for('Asset') %></h2>
    </div>
    <div class="panel-body">
      <%- @item.assets.each do |asset| %>
        <%= render_asset(asset) %>
      <%- end %>
    </div>
  </div>
  <%- end %>
</div>
<div class="col-sm-5">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h2 class="panel-title">Item Information</h2>
    </div>
    <div class="panel-body url-wrap">
      <p>
        Published: <%= @item.published_at %><br>
        Imported: <%= @item.created_at %><br>
        Channel: <%= link_to_channel @item.channel %><br>
        Entity: <%= link_to @item.channel.entity, @item.channel.entity %>
      </p>
    </div>
  </div>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h2 class="panel-title">Tags <%= help_icon_for('Tag') %></h2>
    </div>
    <div class="panel-body">
      <%= tag_labels(@item.custom_tags) %>
    </div>
  </div>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h2 class="panel-title">Keywords <%= help_icon_for('Keyword') %></h2>
    </div>
    <div class="panel-body">
      <%= keyword_labels(@item.keywords) %>
    </div>
  </div>
  <% if @item.events.present? -%>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h2 class="panel-title">Events <%= help_icon_for('Event') %></h2>
      </div>
      <div class="panel-body">
        <%= render @item.events %>
      </div>
    </div>
  <% end -%>

</div>
