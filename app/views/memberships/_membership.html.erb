<div id="<%= "member-#{user.id}" %>">
  <%= mail_to user.email, fa_icon('envelope', text: user.display_name), class: '' %>
  <%- if (entity.has_user?(current_user) || current_user.admin?) %>
    <%= link_to fa_icon(:remove), "/memberships/destroy?entity_id=#{entity.id}&user_id=#{user.id}", method: :delete, remote: true %>
  <%- end %>
</div>
