<h1><%= @entity.name %></h1>
<% if current_user %>
  <p><%= entity_action_links @entity %></p>
<% end %>

<div class="col-sm-8">
  <h2>Channels</h2>
  <%- if @entity.has_user? current_user %>
    <div class="btn-group">
      <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
        Register new channel <span class="caret"></span>
      </button>
      <ul class="dropdown-menu" role="menu">
        <%- Channel::TYPES.each do |type| %>
          <li><%= link_to type.type_name, send('new_entity_'+type.model_name.singular+'_path', @entity) %></li>
        <%- end %>
      </ul>
    </div>
  <%- end %>
  <ul class="channel-list pane">
    <%- @entity.channels.each do |channel| %>
      <li><%= link_to_channel(channel) %></li>
    <%- end %>
  </ul>
</div>
<div class="col-sm-4">
  <h2>Users</h2>
  <ul>
    <%- @entity.users.each do |user| %>
      <li><%= mail_to user.email, user.display_name %></li>
    <%- end %>
  </ul>

  <h2>Keywords</h2>
  <p><%= comma_list_links(@entity.keywords) %></p>

  <%- if @entity.contact %>
    <h2>Contact</h2>
    <%= render partial: "contacts/contact", locals: { contact: @entity.contact } %>
  <%- end %>
</div>
