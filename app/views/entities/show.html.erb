<h1><%= @entity.name %></h1>
<div class="col-sm-8">
  <h2>Channels</h2>
  <div class="btn-group">
    <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
      Register new channel <span class="caret"></span>
    </button>
    <ul class="dropdown-menu" role="menu">
      <li><%= link_to 'Web', new_web_channel_path(entity_id: @entity.id) %></li>
      <li><%= link_to 'Events', new_event_channel_path(entity_id: @entity.id) %></li>
      <li><%= link_to 'Twitter', new_twitter_channel_path(entity_id: @entity.id) %></li>
      <li><%= link_to 'Facebook', new_facebook_channel_path(entity_id: @entity.id) %></li>
      <li><%= link_to 'Instagram', new_instagram_channel_path(entity_id: @entity.id) %></li>
      <li><%= link_to 'Youtube', new_youtube_channel_path(entity_id: @entity.id) %></li>
    </ul>
  </div>
  <ul>
    <%- @entity.channels.each do |channel| %>
      <li><%= link_to channel.name, channel %></li>
    <%- end %>
  </ul>
</div>
<div class="col-sm-4">
  <h2>Users</h2>
  <ul>
    <%- @entity.users.each do |user| %>
      <li><%= user.fullname %></li>
    <%- end %>
  </ul>
</div>
