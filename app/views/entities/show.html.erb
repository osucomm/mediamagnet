<h1><%= @entity.name %></h1>
<% if current_user %>
  <p><%= entity_action_links @entity %></p>
<% end %>

<div class="col-sm-8">
  <h2>Channels</h2>
  <%- if @entity.has_user? current_user %>
    <div class="btn-group">
      <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
        Register new channel <span class="caret"></span>
      </button>
      <ul class="dropdown-menu" role="menu">
        <%- Channel::TYPES.each do |type| %>
          <li><%= link_to type.type_name, send('new_entity_'+type.model_name.singular+'_path', @entity) %></li>
        <%- end %>
      </ul>
    </div>
  <%- end %>
  <ul>
    <%- @entity.channels.each do |channel| %>
      <li><%= link_to channel.name, channel %></li>
    <%- end %>
  </ul>
</div>
<div class="col-sm-4">
  <h2>Users</h2>
  <ul>
    <%- @entity.users.each do |user| %>
      <li><%= user.display_name %></li>
    <%- end %>
  </ul>

  <%- if @entity.contact %>
    <h2>Contact</h2>
    <ul>
      <%- [:name, :organization, :url, :phone, :email].each do |attr|
        value = @entity.contact.send(attr)
        if value %>
          <li><%= attr.capitalize %>: <%= value %></li>
        <%- end
      end %>
    </ul>
  <%- end %>
</div>
