<%= simple_form_for @entity, html: { class: 'form-horizontal' },
  wrapper: :horizontal_form do |f| %>

  <%= f.error_notification %>

  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :link %>

  <%= field_set_tag 'Contact' do %>
    <%= f.simple_fields_for :contact do |c| %>
      <%= c.input :name %>
      <%= c.input :organization %>
      <%= c.input :url, label: 'URL' %>
      <%= c.input :phone %>
      <%= c.input :email %>
    <% end %>
  <% end %>

  <%= f.button :submit %>

<%- end %>
