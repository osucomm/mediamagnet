<%= simple_form_for @entity, html: { class: 'form-horizontal' },
  wrapper: :horizontal_form,
  wrapper_mappings: {
    boolean: :horizontal_boolean
  } do |f| %>

  <%= f.error_notification %>

  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :link %>
  <%- if policy(@entity).approve? %>
    <%= f.input :approved %>
  <%- end %>

  <%= field_set_tag 'Contact' do %>
    <%= render partial: 'contacts/form', locals: {f: f} %>
  <% end %>

  <%= f.button :submit, 'Update' %>
  <%- unless @entity.new_record? %>
    <%= link_to_delete 'Delete', @entity, 'btn btn-danger' %>
  <%- end %>
  <%= link_to 'Cancel', :back, class: 'btn btn-link' %>

<%- end %>
