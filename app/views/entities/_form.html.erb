<%= simple_form_for @entity, html: { class: 'form-horizontal' },
  wrapper: :horizontal_form do |f| %>

  <%= f.error_notification %>

  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :link %>
  <%= f.association :users,
    include_blank: true,
    label_method: :fullname,
    input_html: { class: 'chosen-select', 'data-placeholder'=> "Add users..." } %>
  <%= render partial: 'keywords/tag_field', locals: {f: f} %>

  <%= field_set_tag 'Contact' do %>
    <%= render partial: 'contacts/form', locals: {f: f} %>
  <% end %>

  <%= f.button :submit %>
  <%- unless @entity.new_record? %>
    <%= link_to_delete 'Delete Entity', @entity, 'btn btn-danger' %>
  <%- end %>

<%- end %>
