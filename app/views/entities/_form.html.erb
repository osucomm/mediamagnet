<%= simple_form_for entity, html: { class: 'form-horizontal' } do |f| %>

  <div class="form-inputs">
    <div class="col-sm-6">
      <%= f.input :name, input_html: { class: 'form-control' } %>
    </div>
    <div class="col-sm-6">
      <%= f.input :description %>
    </div>
    <div class="col-sm-12">
      <%= f.input :link %>
      <%= f.button :submit %>
  </div>


<%- end %>
